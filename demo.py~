import sys
import gtk

class demo:
 def on_window_destroy(self, widget, data=None):
  gtk.main_quit()
     
 def __init__(self):
  builder = gtk.Builder()
  builder.add_from_file("demo.glade") 
  self.window = builder.get_object("window")
  builder.connect_signals(self)       
    
if __name__ == "__main__":
    d = demo()
    d.window.show()
    gtk.main()

